pipeline {
    agent any
    environment {
        PATH = "/usr/local/bin:/usr/local/share/dotnet:$PATH"
        DOCKER_HOST = 'unix:///Users/aysegul/.docker/run/docker.sock'
        DOCKER_CONTEXT = 'desktop-linux'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                // Bulunduğunuz dizini kontrol edin
                sh 'pwd'
                // Dizin içindeki dosyaları kontrol edin
                sh 'ls -la'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'pwd'  // Docker build sırasında dizini kontrol edin
                    def customImage = docker.build('aysegulakbaas/samplewebapiaspnetcore', '-f path/to/Dockerfile .')
                    customImage.push('latest')
                }
            }
        }
    }
}
